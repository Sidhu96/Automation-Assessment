	   newUser.typePassword1().sendKeys("password");
	   newUser.typePassword2().sendKeys("password");
	   newUser.typeName().sendKeys("Rajan Sidhu");
	   newUser.typeEmail().sendKeys("rajan@testing.com");
	}

